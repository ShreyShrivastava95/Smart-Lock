<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/perm_parent_Layout_list">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/First_Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jarrod McGee"
                android:textSize="22dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_toLeftOf="@id/toggle_Permissions"
                />

            <Switch
                android:id="@+id/toggle_Permissions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/text_On"
                android:checked="true"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp" />
            <TextView
                android:id="@+id/text_On"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On"
                android:layout_alignParentRight="true"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                />
            <!-- Next row -->
            <TextView
                android:id="@+id/left_Perm_Level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permission Level: "
                android:layout_below="@id/userName"
                android:paddingBottom="10dp"
                android:layout_toLeftOf="@id/text_PermissionLevel"
                android:paddingTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/userName"
                android:layout_height="wrap_content"
                android:id="@+id/text_PermissionLevel"
                android:layout_alignParentRight="true"
                android:text="0"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="5dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1A000000"
                android:layout_below="@id/text_PermissionLevel"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>


