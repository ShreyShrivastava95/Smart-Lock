<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/access_parent_Layout_list">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA">
        >
        <RelativeLayout
            android:id="@+id/First_Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/access_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:40 PM 5/4/18"
                android:textSize="22dp"
                android:paddingHorizontal="22dp"
                android:paddingVertical="5dp"
                android:layout_alignParentLeft="true"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/access_action"
                android:text="Unlocked"
                android:layout_alignParentRight="true"
                android:textSize="22dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/access_user"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textSize="16dp"
                android:layout_below="@id/access_time"
                android:layout_alignParentRight="true"
                android:text="Username"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1A000000"
                android:layout_below="@id/text_PermissionLevel"
                android:paddingVertical="10dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>


